---
import "@fontsource-variable/dm-sans";
import Layout from "./Layout.astro";
import "@/styles/markdown.css";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <section
        class="relative z-10 mx-auto my-24 max-w-[70ch] text-pretty px-6 text-left text-xl sm:px-20"
    >
        <!-- Fondo con puntos morados -->
        <div
            class="absolute inset-0 h-full w-full bg-[radial-gradient(#ff77ff_0px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,black_70%,transparent_100%)]"
        >
        </div>

        <!-- Contenido dinámico que se insertará desde archivos .md -->
        <div
            class="relative z-10 prose prose-xl dark:prose-dark mx-auto p-6 prose-headings:text-purple-600 prose-p:text-white prose-li:text-gray-300 prose-a:text-gray-400 prose-strong:text-purple-400"
        >
            <h1>{frontmatter.title}</h1>
            <slot />
        </div>
    </section>
</Layout>
