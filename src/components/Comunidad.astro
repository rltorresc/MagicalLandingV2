---
import MarqueeVertical from "./MarqueeVertical.tsx";
import { RainbowButton } from "@/components/ui/rainbow-button";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="max-w-[1400px] m-auto">
  <h2
    class="text-4xl font-semiblod text-center text-wrap mx-auto mb-10 tracking-wide"
  >
    {t("h2.comunidad")}
  </h2>
  <p
    class="text-center max-w-4xl text-base md:text-base text-balance font-medium mx-auto mb-8"
  >
    {t("p.comunidad")}
  </p>
  <div class="flex justify-center mb-8">
    <a href="https://sub.magical20.com/">
      <RainbowButton>{t("button.unirse")}</RainbowButton>
    </a>
  </div>
  <MarqueeVertical client:load />
</div>
