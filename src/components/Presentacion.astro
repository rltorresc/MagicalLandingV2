---
import Particles from "@/components/ui/particles";
import Intro from "@/components/Intro.astro";
---

<section
  class="relative bg-cover bg-center bg-no-repeat w-full max-w-[100vw] min-h-[calc(100vh-132px)] lg:max-h-[100vh]"
>
  <!-- Particles de fondo -->
  <Particles
    client:load
    color="#ff77ff"
    className="absolute inset-0 z-0 min-h-[calc(100vh-132px)] lg:max-h-[100vh]"
  />

  <!-- Contenedor principal -->
  <div
    class="relative mx-auto max-w-screen-xl h-full z-10 flex flex-col items-center justify-center p-6 min-h-[calc(100vh-132px)] lg:max-h-[100vh] lg:justify-start lg:flex-row"
  >
    <!-- SecciÃ³n izquierda con el componente Intro -->
    <div
      class="w-full h-auto flex items-center justify-center"
    >
      <Intro />
    </div>
  </div>
</section>
